<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.ComposeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
    android:id="@+id/compose_toolbar_cancel_button"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:adjustViewBounds="true"
    android:gravity="center"
        android:layout_marginTop="5dp"
    android:scaleType="fitCenter"
    app:srcCompat="@drawable/ic_close"
    android:layout_alignParentLeft="true" />

    <TextView
    android:id="@+id/hello_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New Post"
        android:layout_marginLeft="20dp"
    android:textColor="@color/soft_red"
    android:textSize="36sp"
    android:fontFamily="@font/squada_one" />

    </LinearLayout>

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:paddingBottom="50dp"
        android:layout_marginLeft="5dp"
        android:hint="What's happening?"
        android:inputType="textMultiLine"
        android:letterSpacing="0.0025"
        android:lineSpacingExtra="3dp"
        android:background="@null"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:typeface="normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etDescription"
        android:text=""
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_location_black"
        android:visibility="gone"
        android:id="@+id/tvLocation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

    <Button
        android:id="@+id/btnCaptureImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="camera"
        android:textColor="@color/white"
        android:background="@drawable/rounded_rectangle" />

    <Button
        android:id="@+id/btnGallery"
        android:background="@drawable/rounded_rectangle"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="location"
        android:textColor="@color/white"
        android:background="@drawable/rounded_rectangle"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/ivPostImage"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Post"
        android:id="@+id/btnSubmit"
        android:background="@drawable/rounded_rectangle"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"/>


</LinearLayout>